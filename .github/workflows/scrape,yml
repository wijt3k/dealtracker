name: Scrape Deals

on:
  schedule:
    # Runs every 4 hours â€” adjust as you like
    - cron: '0 */4 * * *'
  workflow_dispatch:  # Also allows manual trigger from GitHub UI

jobs:
  scrape:
    runs-on: ubuntu-latest

    permissions:
      contents: write  # Needed to commit deals.json back to repo

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Run scraper
        run: python scraper.py

      - name: Commit and push deals.json
        run: |
          git config --global user.name 'DealTracker Bot'
          git config --global user.email 'bot@dealtracker.nl'
          git add deals.json
          # Only commit if deals.json actually changed
          git diff --staged --quiet || git commit -m "ðŸ¤– Update deals $(date -u '+%Y-%m-%d %H:%M') UTC"
          git push
